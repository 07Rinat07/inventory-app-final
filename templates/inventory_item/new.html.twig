{% extends 'base.html.twig' %}

{% block title %}New item{% endblock %}

{% block body %}
  <div class="container mt-4">

    <h3>
      New item â€”
      <span class="text-muted">{{ inventory.name }}</span>
    </h3>

    <form method="post" class="mt-4">

      {% for field in fields %}
        <div class="mb-3">
          <label class="form-label">
            {{ field.type.value|upper }}
            {% if field.isRequired %}
              <span class="text-danger">*</span>
            {% endif %}
          </label>

          {% include 'inventory_item/field_input.html.twig' with {
            field: field
          } %}
        </div>
      {% endfor %}

      <div class="mt-4">
        <button class="btn btn-primary">
          Save item
        </button>

        <a href="{{ path('inventory_show', {id: inventory.id}) }}"
           class="btn btn-outline-secondary">
          Cancel
        </a>
      </div>

    </form>
  </div>
{% endblock %}
