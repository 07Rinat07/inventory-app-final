{% extends 'base.html.twig' %}

{% block title %}Edit inventory{% endblock %}

{% block body %}
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h3 class="mb-0">Edit inventory</h3>
      <div class="text-muted small">{{ inventory.name }}</div>
    </div>

    <a href="{{ path('inventory_show', {id: inventory.id}) }}" class="btn btn-outline-secondary">Back</a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <form method="post" class="vstack gap-3">

        <div>
          <label class="form-label" for="name">Name</label>
          <input id="name"
                 type="text"
                 class="form-control"
                 name="name"
                 value="{{ name|default('') }}"
                 maxlength="255"
                 required>
        </div>

        <div class="form-check">
          <input class="form-check-input"
                 type="checkbox"
                 name="is_public"
                 value="1"
                 id="is_public"
                 {% if is_public|default(false) %}checked{% endif %}>
          <label class="form-check-label" for="is_public">Public inventory</label>
        </div>

        <div class="d-flex gap-2">
          <button class="btn btn-primary" type="submit">Save</button>
          <a href="{{ path('inventory_show', {id: inventory.id}) }}" class="btn btn-outline-secondary">Cancel</a>
        </div>

      </form>
    </div>
  </div>
{% endblock %}
