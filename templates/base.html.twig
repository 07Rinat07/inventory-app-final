{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Inventory App{% endblock %}</title>

  {# Bootstrap 5 CSS (CDN) — самый надежный путь без npm/node_modules #}
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

  {# Твои локальные стили (asset-mapper) #}
  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
  {% endblock %}

  {% block javascripts %}
    <script type="module" src="{{ asset('app.js') }}"></script>
  {% endblock %}

</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="{{ path('inventory_index') }}">Inventory</a>

    <div class="d-flex gap-2 align-items-center">
      {% if app.user %}
        <span class="navbar-text text-white-50 small">
          {{ app.user.userIdentifier }}
        </span>

        <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">
          Logout
        </a>
      {% else %}
        <a class="btn btn-outline-light btn-sm" href="{{ path('app_login') }}">
          Login
        </a>
      {% endif %}
    </div>
  </div>
</nav>

<main class="container py-4">

  {# Flash messages (Bootstrap) #}
  {% for type, messages in app.flashes %}
    {% for message in messages %}
      <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    {% endfor %}
  {% endfor %}

  {% block body %}{% endblock %}
</main>

{# Bootstrap JS — нужен для alert dismiss, dropdown и т.д. #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
