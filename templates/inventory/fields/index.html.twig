{% extends 'base.html.twig' %}

{% block title %}Custom fields{% endblock %}

{% block body %}
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h1 class="h3 mb-0">Custom fields</h1>
      <div class="text-muted small">
        Inventory: <span class="fw-semibold">{{ inventory.name }}</span>
      </div>
    </div>

    <div class="d-flex gap-2">
      <a href="{{ path('inventory_show', {id: inventory.id}) }}" class="btn btn-outline-secondary">Back</a>
      <a href="{{ path('inventory_custom_fields_new', {id: inventory.id}) }}" class="btn btn-primary">Add field</a>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
          <thead>
          <tr>
            <th style="width: 90px;">Pos</th>
            <th>Type</th>
            <th style="width: 140px;">Required</th>
            <th class="text-end" style="width: 220px;">Actions</th>
          </tr>
          </thead>

          <tbody>
          {% for f in fields %}
            <tr>
              <td class="text-muted">{{ f.position }}</td>

              <td class="fw-semibold">
                {# getType(): CustomFieldType, у enum есть метод label() #}
                {{ f.type.label() }}
                <div class="text-muted small">Key: <code>{{ f.type.value }}</code></div>
              </td>

              <td>
                {% if f.required %}
                  <span class="badge text-bg-danger">Required</span>
                {% else %}
                  <span class="badge text-bg-secondary">Optional</span>
                {% endif %}
              </td>

              <td class="text-end">
                <div class="d-inline-flex gap-2">
                  <a class="btn btn-sm btn-outline-primary"
                     href="{{ path('inventory_custom_fields_edit', {id: inventory.id, fieldId: f.id}) }}">
                    Edit
                  </a>

                  <form method="post"
                        class="d-inline"
                        action="{{ path('inventory_custom_fields_delete', {id: inventory.id, fieldId: f.id}) }}"
                        onsubmit="return confirm('Delete this field?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('custom_field_delete_' ~ f.id) }}">
                    <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="4" class="text-muted">
                No custom fields yet. Click <strong>Add field</strong> to create the first one.
              </td>
            </tr>
          {% endfor %}
          </tbody>

        </table>
      </div>
    </div>
  </div>
{% endblock %}
